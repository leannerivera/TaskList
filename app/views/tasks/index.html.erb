<body>

  <section class='do-stuff'>
    <h1> TaskList </h1>
    <p> <%=link_to "Add a Task", new_task_path %> </p>

    <p> <a href='#'> All Tasks </a> </p>
  </section>

  <section class="task-info">
    <h2> Your Tasks </h2>
    <ul>
    <% @tasks.each do |task| %>
    <label for =<%= "#{task.name}" %>
      <input type='checkbox' name='task_check' id='taskcheck'>
      <li> <h3> <%= "#{task.name}" %> </h3>
      <p>
        <%= "For: #{task.category} || Due: #{task.due}" %> ||
      <%= link_to 'Delete', task_path(task.id), method: :delete %>
        <p>
      </li>
    </label>
      <% end %>
      <ul>
  </section>

  <footer> Â© 2018, Leanne Rivera </footer>
</body>
